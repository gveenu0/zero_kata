<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="newbuttonstyle" parent="@android:style/Widget.Button"
        tools:ignore="MissingPrefix">
        <item name="android:background">#5ac7f9</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button"
        tools:ignore="MissingPrefix">
        <item name="android:background">#2ab7f4</item>
    </style>

    <style name="zerokatatext" parent="@android:style/Widget.TextView"
        tools:ignore="MissingPrefix">
        <item name="android:textColor">#FF3030</item>
        <item name="android:shadowColor">#0008FF</item>
        <item name="android:shadowDx">100</item>
        <item name="android:shadowDy">100</item>

    </style>


    <style name="title" parent="@android:style/Widget.TextView"
        tools:ignore="MissingPrefix">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00FFC4</item>
        <item name="fontFamily">@font/rokkitt</item>
    </style>

</resources>
