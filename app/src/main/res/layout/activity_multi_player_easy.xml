<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/newbuttonstyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.softtechnotech.zerokata.multi_player_easy">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            style="@style/title"
            android:textColor="@color/p1"
            android:text="P1: 0"
            android:textSize="30sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:freezesText="true"/>

        <TextView
            android:id="@+id/text_view_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            style="@style/title"
            android:textColor="@color/p2"
            android:text="P2: 0"
            android:textSize="30sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:freezesText="true"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xobuttons"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xobuttons"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:freezesText="true"/>

        <Button
            android:id="@+id/button_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xobuttons"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:freezesText="true"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xobuttons"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xobuttons"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xobuttons"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:freezesText="true"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xobuttons"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_21"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xobuttons"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_22"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xobuttons"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:freezesText="true"/>



    </LinearLayout>



    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonshape"
        android:fontFamily="monospace"
        android:text="RESET"
        style="@style/title"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonshape"
        android:fontFamily="monospace"
        android:text="BACK"
        style="@style/title"
        android:textAlignment="center"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:layout_marginBottom="2dp"
        android:textSize="20dp" />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:adUnitId="ca-app-pub-5803830864440853/8131406110">
    </com.google.android.gms.ads.AdView>


</LinearLayout>
